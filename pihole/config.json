{
    "name": "Pi-hole",
    "version": "1.0.8",
    "slug": "pihole",
    "description": "Network-wide ad blocking via Pi-hole.",
    "startup": "services",
    "boot": "auto",
    "webui": "http://[HOST]:[PORT:94]/admin",
    "ports": {
        "53/tcp": 53,
        "53/udp": 53,
        "80/tcp": 94,
        "443/tcp": 95
    },
    "map": [
        "etc-pihole:rw",
        "etc-dnsmasq.d:rw",
        "ssl:rw"
    ],
    "options": {
        "password": ""
    },
    "schema": {
        "password": "str?"
    },
    "environment": {
        "WEBPASSWORD": "{password}"
    },
    "arch": [
        "amd64",
        "aarch64",
        "armv7"
    ]
}